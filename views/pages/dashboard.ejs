  <script>
    (() => {
      'use strict';
      const forms = document.querySelectorAll('.needs-validation');
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();
  </script>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const buttons = document.querySelectorAll(".mark-btn");
      buttons.forEach(button => {
        button.addEventListener("click", async () => {
          const medId = button.dataset.id;
          try {
            const response = await fetch(`/dashboard/mark-taken/${medId}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
              },
              body: JSON.stringify({ id: medId })
            });

            if (response.ok) {
              button.parentElement.innerHTML = '<span class="text-success">‚úî Completed</span>';
            } else {
              alert("‚ùå Failed to mark as taken. Please try again.");
            }
          } catch (error) {
            console.error(error);
            alert("‚ö† An error occurred. Please try again later.");
          }
        });
      });
    });
  </script>

